# HTTP server port
PORT=3000

# Database connection
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=change-me
DB_NAME=smartcar

# Environment: use "production" to disable TypeORM auto-sync
NODE_ENV=development

# JWT secret for auth & mediasoup signaling
JWT_SECRET=super-secret-jwt-key

# Optional: mediasoup tuning (keep defaults if unsure)
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=49999

# Optional: comma-separated vehicle API keys mapping (if you want static keys)
# Example format is up to your implementation side.











# =========================
# Backend / NestJS
# =========================

# وضع التشغيل
NODE_ENV=development

# منفذ الـ API + WebSocket (mediasoup)
PORT=3000

# ----- قاعدة البيانات (MySQL) -----
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=your_db_password
DB_NAME=smartcar

# ----- JWT -----
# لازم نفس القيمة هنا تُستخدم في:
# - AuthModule (JWT_SECRET)
# - JwtStrategy
# - mediasoup.config jwtSecret (via ConfigService)
JWT_SECRET=smartcar-secret-change-me

# =========================
# Mediasoup
# =========================

# IP المُعلن للعملاء (لو شغّال داخل LAN حط IP الجهاز)
MEDIASOUP_ANNOUNCED_IP=127.0.0.1

# مدى منافذ الـ RTC (افتراضي مثل الكود)
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=49999

# =========================
# Frontend / Vite
# =========================

# رابط الـ API (يستخدمه client/src/services/api.ts غالباً)
VITE_API_BASE_URL=http://localhost:3000/api

# قاعدة WebSocket / Mediasoup namespace
# الكود في Settings.tsx يبني: {VITE_WS_BASE_URL}/mediasoup
VITE_WS_BASE_URL=http://localhost:3000

# يستخدم في Control.tsx كـ fallback لمالك البث
# خليه يطابق ID الأدمن اللي ينعمل تلقائياً (id=1) أو عدّل حسب DB
VITE_OWNER_USER_ID=1
